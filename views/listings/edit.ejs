<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Your Listing</h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <br>
                    <input name="listing[title]" value="<%=listing.title%>" type="title" class="form-control" required pattern="[A-Za-z ]+">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter Title.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <br>
                    <textarea name="listing[description]"  class="form-control" required pattern="[A-Za-z ]+"><%=listing.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter Short Description.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image:</label>
                    <br>
                    <input name="listing[image]" value="<%=listing.image%>" type="file"  class="form-control">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                
                <div class="row">
                    <div class="md-3 col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <br>
                        <input name="listing[price]" value="<%=listing.price%>"  type="text"  class="form-control" required min="0" max="100000" step="0.01">
                        <div class="valid-feedback">
                           Looks good!.
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Price.
                        </div>
                    </div>
                    <div class="md-3 col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <br>
                        <input name="listing[country]" value="<%=listing.country%>"  type="text"  class="form-control" required pattern="[A-Za-z ]+">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please Enter Country Name.
                        </div>
                    </div>
                </div>

                <div class="md-3">
                    <label for="location" class="form-label">Location:</label>
                    <br>
                    <input name="listing[location]" value="<%=listing.location%>"  type="text"  class="form-control" required pattern="[A-Za-z ]+">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please Enter A Location.
                    </div>
                </div>
                
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
                <br><br>
            </form>
        </div>
    </div>
</body>