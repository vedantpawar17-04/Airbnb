<% layout('/layouts/boilerplate') -%>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
    <%for(let i=0;i<allListing.length;i++){%>
        <a href="/listings/<%= allListing[i]._id%>" class="listing-link">
            <div class="card col listing-cards">
                <img 
                    src="<%= allListing[i].image.url%>" 
                    class="card-img-top" alt="listing_image" 
                    style="height: 18rem;"
                >
                <div class="card-img-overlay"></div>
                <div class="card-body">
                        <p class="card-text">
                             <b><%= allListing[i].title %></b>
                            <br>
                            &#8377;<%=allListing[i].price.toLocaleString('en-IN') %> / night
                        </p>
                </div>  
            </div>
        </a>
    <%}%>
</div>