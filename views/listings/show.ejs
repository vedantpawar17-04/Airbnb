<% layout('/layouts/boilerplate') -%>

    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3 ">
            <h3><b><%=listing.title%></b></h3>
            <br>
        </div>
        <div class="card col-6 offset-3 show-card listing-cards">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <br>
                <p class="card-text"><b>Owned By</b> <i><b><%= listing.owner.username %></b></i></p>
                <p class="card-text">
                    <b>
                     <%=listing.description%>
                    </b>
                </p>
                <p class="card-text">
                    <b>
                        &#8377;<%=listing.price.toLocaleString("en-IN")%>
                    </b>
                </p>
                <p class="card-text">
                    <b>
                        <%=listing.location%>
                    </b>
                </p>
                <p class="card-text">
                    <b>
                        <%=listing.country%>
                    </b>
                </p>
            </div>
        </div>
        <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
        <div class="btns mt-1">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark  offset-3 mb-2 edit-btn">Edit</a>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5 ">Delete</button>
            </form>
        </div>
        <% } %>
        <div class="col-8 offset-3 mb-3 ">
            <% if(currUser) {%>
                <hr>
            <br>
            <h4 class="mb-3">Leave a Review</h4>
            <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
                <label for="review" class="form-label">Rating</label>
                <fieldset class="starability-slot mb-1">
                    <input type="radio" id="no-rate" class="input-no-rate mb-1" name="review[rating]" value="0" checked aria-label="No rating."/>
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" rows="4" cols="50" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please Leave Your Comments.
                    </div>
                </div>
                <br>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
            <%}%>
            <% if(listing.reviews.length>0){ %>
            <div class="row">
                <p><b>All Reviews</b></p>
                <% for(review of listing.reviews){%>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><b>@<%= review.author.username %></b></h5>
                            <p class="card-text"><%=review.comment%></p>
                            <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                        </div>
                        <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
                            <%if(currUser && review.author._id.equals(currUser._id)){%>
                            <button class="btn btn-sm  btn-dark mb-3 mt-3">Delete</button>
                            <%}%>
                        </form>
                    </div>
                <% } %>
            </div>
            <% } %>
        </div>
        <!-- ---------------- -->
        <div class="col-8 offset-3 mb-3">
        <h3>Where you'll be</h3><br>
        <div id="map" style="height: 400px; width:80vh"></div>
        </div>
    </div>
<script src="/Javascript/map.js"></script>

